@model List<APP_Examen.Models.EmployeeModel>
@using GridMvc.Html
@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Content/Gridmvc.css" rel="stylesheet" type="text/css"/>
<script src="~/Scripts/gridmvc.js" type="text/javascript"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

<h2>Employees</h2>

<div>
    @Html.ActionLink("Add new", "Create")
</div>

@Html.Grid(Model).Columns(columns => {
    columns.Add(foo => foo.nombreCompleto).Titled("Nombre Completo");
    columns.Add(foo => foo.cedula).Titled("Cedula");
    columns.Add(foo => foo.correo).Titled("Correo");
    columns.Add(foo => foo.fechaNacimiento).Titled("Fecha Nacimiento").Format("{0:MM/dd/yyyy}");
    columns.Add(foo => foo.fechaIngreso).Titled("Ingreso").Format("{0:MM/dd/yyyy}");
    columns.Add(foo => foo.nombreArea).Titled("Area").Sortable(true).Filterable(true);
    columns.Add(foo => foo.nombreJefe).Titled("Jefe");
    columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .RenderValueAs(o => Html.ActionLink("Edit", "Edit", new { id = o.idEmpleado }));
    columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .RenderValueAs(o => Html.ActionLink("Delete","Delete",new { id=o.idEmpleado}));
    columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .RenderValueAs(o => Html.ActionLink("Details","Details",new { id=o.idEmpleado}));
})
